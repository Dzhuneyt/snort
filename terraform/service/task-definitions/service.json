[
  {
    "name": "nginx",
    "image": "${ecr_repository_base_url}/nginx:${TAG}",
    "cpu": 10,
    "memory": 128,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "links": [
      "frontend",
      "backend"
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${log_region}"
      }
    }
  },
  {
    "name": "frontend",
    "image": "${ecr_repository_base_url}/frontend:${TAG}",
    "cpu": 10,
    "memory": 128,
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${log_region}"
      }
    }
  },
  {
    "name": "backend",
    "image": "${ecr_repository_base_url}/backend:${TAG}",
    "cpu": 10,
    "memory": 512,
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${log_region}"
      }
    }
  }
]
