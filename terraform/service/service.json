[
  {
    "name": "nginx",
    "image": "${ecr_repository_base_url}/nginx:${TAG}",
    "cpu": 10,
    "memory": 128,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 0
      }
    ],
    "links": [
      "frontend",
      "backend"
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${log_region}"
      }
    }
  },
  {
    "name": "frontend",
    "image": "${ecr_repository_base_url}/frontend:${TAG}",
    "cpu": 10,
    "memory": 128,
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${log_region}"
      }
    }
  },
  {
    "name": "backend",
    "image": "${ecr_repository_base_url}/backend:${TAG}",
    "cpu": 10,
    "memory": 512,
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${log_region}"
      }
    },
    "environment": [
      {
        "name": "DB_HOST",
        "value": "${DB_HOST}"
      },
      {
        "name": "DB_DATABASE",
        "value": "${DB_DATABASE}"
      },
      {
        "name": "DB_USERNAME",
        "value": "${DB_USERNAME}"
      },
      {
        "name": "DB_PASSWORD",
        "value": "${DB_PASSWORD}"
      },
      {
        "name": "LOG_CHANNEL",
        "value": "errorlog"
      }
    ]
  }
]
